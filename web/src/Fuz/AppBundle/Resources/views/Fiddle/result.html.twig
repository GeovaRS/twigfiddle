{% import "FuzAppBundle::macros.html.twig" as macros %}

{% if data.result == null %}

    {# Technical error #}
    {{ macros.box('black', 'A fatal error occured', 'The response do not contain anything to display, even errors.') }}

{% else %}

    {# Functional errors #}
    {% if data.result.errors %}
        {{ include("FuzAppBundle:Fiddle:result-error.html.twig") }}
    {% endif %}

    {# Result #}
    {% if data.result.rendered|length %}
        {{ include("FuzAppBundle:Fiddle:result-rendered.html.twig") }}
    {% endif %}

    {# Deprecation notices #}
    {% if data.result.deprecations %}
        {{ include("FuzAppBundle:Fiddle:result-deprecation.html.twig") }}
    {% endif %}

    {# Compiled files #}
    {% if data.result.compiled %}
        {{ include("FuzAppBundle:Fiddle:result-compiled.html.twig") }}
    {% endif %}

    {# Debug Mode enabled #}
    {% if fiddle.debug %}
        {{ include("FuzAppBundle:Fiddle:result-debug.html.twig") }}
    {% endif %}

    {# Duration #}
    {% if data.duration %}
        {{ include("FuzAppBundle:Fiddle:result-duration.html.twig") }}
    {% endif %}

{% endif %}
